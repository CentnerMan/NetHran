<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vlsv.client.MainController">

    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <Label minWidth="300.0" prefWidth="300.0" alignment="CENTER" text="Локальное хранилище" textAlignment="CENTER" />
            <ListView fx:id="localFilesList" />
            <HBox>
                <Button minWidth="120.0" onAction="#pressOnUploadBtn" prefWidth="120.0" text="Отправить файл" textAlignment="CENTER" />
                <Button minWidth="100.0" onAction="#pressOnLocalDeleteBtn" prefWidth="100.0" text="Удалить файл" textAlignment="CENTER" />
                <Button minWidth="80.0" onAction="#pressOnLocalRefreshBtn" prefWidth="80.0" text="Обновить" textAlignment="CENTER" />
            </HBox>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Label minWidth="300.0" prefWidth="300.0" alignment="CENTER"  text="Сетевое хранилище" textAlignment="CENTER" />
            <ListView fx:id="remoteFilesList" />
            <HBox>
                <Button minWidth="120.0" onAction="#pressOnDownloadBtn" prefWidth="120.0" text="Скачать файл" textAlignment="CENTER" />
                <Button minWidth="100.0" onAction="#pressOnRemoteDeleteBtn" prefWidth="100.0" text="Удалить файл" textAlignment="CENTER" />
                <Button minWidth="80.0" onAction="#pressOnRemoteRefreshBtn" prefWidth="80.0" text="Обновить" textAlignment="CENTER" />
            </HBox>
        </VBox>
    </HBox>

</VBox>
